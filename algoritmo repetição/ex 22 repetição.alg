algoritmo "semnome"
// Função :
// Autor :
// Data : 04/05/2016
// Seção de Declarações 
var
a1, n, r, termo, cont, soma: inteiro
inicio
escreval ("informe a1")
leia (a1)
escreval ("informe n")
leia (n)
escreval ("informe r")
leia (r)
soma  <- 0
termo <- a1
cont  <- 1
para cont <- 1 ate n faca
     escreval (termo)
     soma <- soma + termo
     termo <-termo+r


fimpara
fimalgoritmo
